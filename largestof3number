 Find the Largest Three Numbers and Check for String Palindrome


FUNCTION findlargestthreenumbers(numbers)
    IF length of numbers < 3 THEN
        RETURN "List must contain at least three numbers"
    END IF

  
    largest = second_largest = third_largest = minimum
    FOR each number IN numbers DO
        IF number > largest THEN
            third_largest = second_largest
            second_largest = largest
            largest = number
        ELSE IF number > second_largest THEN
            third_largest = second_largest
            second_largest = number
        ELSE IF number > third_largest THEN
            third_largest = number
        END IF
    END FOR

    RETURN (largest, second_largest, third_largest)
END FUNCTION
