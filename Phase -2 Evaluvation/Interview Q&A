17. Stack and queue
    #include <iostream>
    #include <stack>
    #include <queue>

    int main() {
        // Stack example
        std::stack<int> myStack;
        myStack.push(1);
        myStack.push(2);
        myStack.push(3);
        
        std::cout << "Stack elements: ";
        while (!myStack.empty()) {
            std::cout << myStack.top() << " ";
            myStack.pop();
        }
        std::cout << std::endl;

        // Queue example
        std::queue<int> myQueue;
        myQueue.push(1);
        myQueue.push(2);
        myQueue.push(3);
        
        std::cout << "Queue elements: ";
        while (!myQueue.empty()) {
            std::cout << myQueue.front() << " ";
            myQueue.pop();
        }
        std::cout << std::endl;

        return 0;
    }

