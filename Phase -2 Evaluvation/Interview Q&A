12. Usage of public, private, protected in the code.
    #include <iostream>
    using namespace std;

    class Base {
    protected:
        int protectedVar;

    public:
        Base() : protectedVar(10) {}

        void showProtected() {
            cout << "Protected Variable: " << protectedVar << endl;
        }
    };

    class Derived : public Base {
    private:
        int privateVar;

    public:
        Derived() : privateVar(20) {}

        void showPrivate() {
            cout << "Private Variable: " << privateVar << endl;
        }

        void showAll() {
            showProtected();
            showPrivate();
        }
    };

    int main() {
        Derived obj;
        obj.showAll();
        return 0;
    }

