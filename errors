#include "widget.h"
#include "ui_widget.h"
#include <QDebug>


Widget::Widget(QWidget *parent)
    : QWidget(parent)
    , ui(new Ui::Widget)
{
    ui->setupUi(this);
    qDebug()<<"Main thread"<<QThread::currentThread();
}

Widget::~Widget()
{
    delete ui;
}

void counting1()
{
    for(int i{0} ; i < 10 ; i ++){
                qDebug() << "Counting method called : " << i <<
                            " thread :" << QThread::currentThread() << " id : " <<QThread::currentThreadId();              //
            }

}


